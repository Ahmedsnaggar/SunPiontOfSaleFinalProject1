@inject SignInManager<AppUser> _signInManager
@inject UserManager<AppUser> _userManager

<ul class="navbar-nav">
    @if (_signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            Hello, @User.Identity.Name &nbsp;&nbsp;
        </li>
        <li class="nav-item">
            <form asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Register" class="nav-link text-dark">Register</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Account" asp-action="Login" asp-route-ReturnUrl="" class="nav-link text-dark">Signin</a>
        </li>
    }
</ul>