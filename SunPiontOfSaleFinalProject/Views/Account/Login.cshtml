@model SunPiontOfSaleFinalProject.Repositories.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LogLayout";
}

<h1>Login</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Login" method="post">
            <h2>Login with your account</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
            <div class="form-floating mb-3">                
                <input asp-for="UserName" class="form-control" placeholder="User name"/>
                <label asp-for="UserName" class="control-label"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <label asp-for="Password" class="control-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <label asp-for="Rememberme" class="form-label">
                    <input asp-for="Rememberme" class="form-check-input" />
                    @Html.DisplayNameFor(r => r.Rememberme)
                </label>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
